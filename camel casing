using namespace std;


int main(){
    string s;
    cin >> s;
    int i,l,count=0;
  //  l=strlen(s);
    for(i=1;s[i]!='\0';i++)
        {
        if(s[i]>='A' && s[i]<='Z')
            count++;
        
    }
    cout<<count+1;
    return 0;
}
